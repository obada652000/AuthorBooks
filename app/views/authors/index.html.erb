<div class="main-content">
  <div class="container mt-7">
    <!-- Table -->
    <h2 class="mb-5">All Authors</h2>
    <div class="row">
      <div class="col">
        <div class="card shadow">
          <div class="card-header border-0">
            <div class="table-responsive">
              <% if flash[:errors] %>
                <% flash.each do |name, message| %>
                  <p class="text-danger"><%= message %></p>
                <% end %>
              <% end %>

              <%= form_for_filterrific @filterrific, url: authors_path, method: :get do |f| %>
                <table class="table align-items-center table-flush">
                  <thead class="thead-light">
                    <tr class="filters">
                      <th>
                        <%= f.text_field :by_name, class: "form-control", placeholder: "Search author..." %>
                      </th>
                      <th>
                        <%= f.submit "Search", class: "btn-info border-0 rounded-pill shadow px-3 py-2" %>
                        <%= link_to "Reset Filters", reset_filterrific_url, class: "btn-danger border-0 rounded-pill shadow px-3 py-2" %>
                      </th>
                    </tr>
                    <tr>
                      <th scope="col">Author</th>
                      <th scope="col"></th>
                      <th scope="col"></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @authors.each do |a| %>
                      <tr>
                        <td><%= a.name %></td>
                        <td></td>
                        <td class="text-center">
                          <%= button_to "Show", author_path(a), method: :get, class: "btn-success border-0 rounded-pill shadow px-3 py-2" %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <!-- Dark table -->
    </div>
  </div>
</div>
